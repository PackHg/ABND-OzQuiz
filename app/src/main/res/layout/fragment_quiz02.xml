<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_quiz02"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".QuizFragment">

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question02"
        android:textColor="@color/colorBlack" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button_new_zealander_flag"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:drawableEnd="@drawable/ic_new_zealander_flag"
                android:drawableRight="@drawable/ic_new_zealander_flag"
                android:padding="@dimen/activity_margin_half" />

            <RadioButton
                android:id="@+id/radio_button_fijian_flag"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:drawableEnd="@drawable/ic_fijian_flag"
                android:drawableRight="@drawable/ic_fijian_flag"
                android:padding="@dimen/activity_margin_half" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_button_tuvaluan_flag"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:drawableEnd="@drawable/ic_tuvaluan_flag"
                android:drawableRight="@drawable/ic_tuvaluan_flag"
                android:padding="@dimen/activity_margin_half" />

            <RadioButton
                android:id="@+id/radio_button_australian_flag"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:drawableEnd="@drawable/ic_australian_flag"
                android:drawableRight="@drawable/ic_australian_flag"
                android:padding="@dimen/activity_margin_half" />

        </LinearLayout>

    </RadioGroup>

</LinearLayout>
